

<div class="mt-4 container bg-cl">
    <div class="row text-center mx-auto">

      {{#each product}}
      <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-6">
        <div class="card custom card-item-css" style="width:350px">
          <a href="/product/{{this.slug}}"><img class="card-img-top" src="{{this.image}}" alt="Card image" style="width:100%"></a>
          <div class="card-body">
            <a href="/product/{{this.slug}}"><h4 class="card-title">{{this.name}}</h4></a>
            <p class="card-text">{{this.price}}</p>
            <p class="card-text">{{this.description}}</p>
            <a href="#" class="btn btn-primary">Mua Ngay</a>
          </div>
        </div>
      </div>
      {{/each}}

    </div>
</div>


